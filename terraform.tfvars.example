# Example Terraform variables file for AFT deployment
# Copy this file to terraform.tfvars and update with your values

# AWS Configuration
aws_region = "us-east-1"
ct_home_region = "us-east-1"
tf_backend_secondary_region = "us-west-2"

# Account IDs (Update with your actual account IDs)
ct_management_account_id = "123456789012"
log_archive_account_id = "123456789013"
audit_account_id = "123456789014"
aft_management_account_id = "123456789015"

# VCS Configuration
vcs_provider = "github"
github_username = "your-github-username"

# Repository Names
account_request_repo_name = "aft-account-request"
global_customizations_repo_name = "aft-global-customizations"
account_customizations_repo_name = "aft-account-customizations"
account_provisioning_customizations_repo_name = "aft-account-provisioning-customizations"

# Feature Flags
aft_feature_cloudtrail_data_events = false
aft_feature_enterprise_support = false
aft_feature_delete_default_vpcs_enabled = true

# Tags
tags = {
  "Project"     = "AFT"
  "Environment" = "production"
  "ManagedBy"   = "Terraform"
  "Owner"       = "Platform-Team"
}